root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true

[{Makefile,GNUmakefile}]
indent_style = tab
end_of_line = lf

[*.{cpp,hpp,ipp}]
charset = utf-8-bom

[*.py]
charset = utf-8
trim_trailing_whitespace = true

[*.yml]
trim_trailing_whitespace = true

[*.{yml,html}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[*.sh]
indent_size = 2


# comment style for lint
[*]
# C-style doc comments
block_comment_start = /*
block_comment = *
block_comment_end = */
line_comment = //
