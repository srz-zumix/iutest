IUTEST_INCLUDE_FILES := $(wildcard $(IUTEST_HEADERS))
IUTEST_INCLUDE_GUARD_CHECK := $(IUTEST_INCLUDE_FILES:%=%.incg)

check_incg: $(IUTEST_INCLUDE_GUARD_CHECK)

%.incg: %
#	@echo $(notdir $<)
	python ../tools/python/iutest_incg_test.py $<


